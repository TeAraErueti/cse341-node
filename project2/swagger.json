{
  "swagger": "2.0",
  "info": {
    "title": "Users & Products API",
    "description": "API Documentation for managing users and products with GitHub OAuth2 authentication.",
    "version": "1.0.0"
  },
  "basePath": "/",
  "schemes": ["https"],
  "securityDefinitions": {
    "OAuth2GitHub": {
      "type": "oauth2",
      "flow": "accessCode",
      "authorizationUrl": "https://github.com/login/oauth/authorize",
      "tokenUrl": "https://github.com/login/oauth/access_token",
      "scopes": {
        "user": "Access user info"
      }
    }
  },
  "security": [
    {
      "OAuth2GitHub": ["user"]
    }
  ],
  "paths": {
    "/users/": {
      "get": {
        "description": "Get all users",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a new user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string", "example": "Joe" },
                "lastName": { "type": "string", "example": "Bloggs" },
                "email": { "type": "string", "example": "JoeBloggs@example.com" },
                "nationality": { "type": "string", "example": "Australian" },
                "birthday": { "type": "string", "example": "01/01/1990" },
                "address": { "type": "string", "example": "29 Booksbrough Avenue, Sydney, Australia" },
                "phone": { "type": "string", "example": "123-456-7895" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "412": { "description": "Precondition Failed" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "description": "Get a user by ID",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": { "type": "string", "example": "Joe" },
                "lastName": { "type": "string", "example": "Bloggs" },
                "email": { "type": "string", "example": "JoeBloggs@example.com" },
                "nationality": { "type": "string", "example": "Australian" },
                "birthday": { "type": "string", "example": "01/01/1990" },
                "address": { "type": "string", "example": "29 Booksbrough Avenue, Sydney, Australia" },
                "phone": { "type": "string", "example": "123-456-7895" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "412": { "description": "Precondition Failed" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete a user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "No Content" },
          "400": { "description": "Bad Request" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/products/": {
      "get": {
        "description": "Get all products",
        "produces": ["application/json"],
        "responses": {
          "200": { "description": "A list of products" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a new product",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["name", "price"],
              "properties": {
                "name": { "type": "string", "example": "Laptop" },
                "price": { "type": "string", "example": "$799.99" },
                "category": { "type": "string", "example": "High-end device" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Product created successfully" },
          "400": { "description": "Invalid input" }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "description": "Get product by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Product found" },
          "404": { "description": "Product not found" }
        }
      },
      "put": {
        "description": "Update a product by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["name", "price"],
              "properties": {
                "name": { "type": "string", "example": "Updated Laptop" },
                "price": { "type": "string", "example": "$699.99" },
                "category": { "type": "string", "example": "Electronics" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "Product updated successfully" },
          "400": { "description": "Invalid product data" },
          "404": { "description": "Product not found" }
        }
      },
      "delete": {
        "description": "Delete a product by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Product deleted" },
          "404": { "description": "Product not found" }
        }
      }
    }
  }
}